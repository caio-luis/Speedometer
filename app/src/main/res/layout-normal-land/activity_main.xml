<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@drawable/blue_radial_gradient_background">


    <TextView
            android:id="@+id/main_tv_speedometer"
            android:text="@string/speedometer_text_idle"
            android:textSize="55sp"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:textColor="@color/black_text_color"
            android:background="@drawable/edge_and_background"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold|italic"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="160dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.008"/>

    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="262dp"
            android:layout_height="94dp"
            android:id="@+id/main_tbtn_start_stop"
            android:checked="false" android:textOn="PARAR"
            android:textOff="LIGAR" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_speedometer" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/main_tv_speedometer"
            app:layout_constraintHorizontal_bias="0.0"
    />

    <TextView
            android:text="km/h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/black_text_color"
            app:layout_constraintStart_toEndOf="@+id/main_tv_speedometer" android:layout_marginStart="36dp"
            app:layout_constraintTop_toTopOf="@+id/main_tv_speedometer"
            app:layout_constraintBottom_toBottomOf="@+id/main_tv_speedometer"
            app:layout_constraintVertical_bias="0.547"
    />

</androidx.constraintlayout.widget.ConstraintLayout>